<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.advikonsignagekeyboardplayer"
    android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name = "android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name='android.permission.WAKE_LOCK' />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE"/>

    <application
        android:name="com.advikonsignagekeyboardplayer.application.AlenkaMedia"
        android:hardwareAccelerated="true"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_secure"
        android:allowBackup="true"
        android:icon="@drawable/logonusign"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:theme">

        <receiver android:name="com.advikonsignagekeyboardplayer.receiver.LaunchReceiver"
            android:enabled="true"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED">
                </action>
                <category android:name="android.intent.category.LAUNCHER">
                </category>
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>

        </receiver>

        <activity android:name="com.advikonsignagekeyboardplayer.activities.Splash_Activity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyHomeActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.advikonsignagekeyboardplayer.activities.LoginActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/MyHomeActivityTheme" />

        <activity
            android:name="com.advikonsignagekeyboardplayer.activities.HomeActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            android:hardwareAccelerated="true"
            android:theme="@style/MyHomeActivityTheme"/>

        <service android:name="com.advikonsignagekeyboardplayer.api_manager.DownloadService"></service>

        <service android:name="com.advikonsignagekeyboardplayer.alarm_manager.ApplicationChecker">
        </service>

        <service android:name="com.advikonsignagekeyboardplayer.utils.FirebaseIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name="com.advikonsignagekeyboardplayer.utils.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="ae0677feabeeb1fb57b269d4f4420dc22f5ec800" />

    </application>


</manifest>